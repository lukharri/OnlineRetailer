@model IEnumerable<OnlineRetailer.Entities.Manufacturer>

@using OnlineRetailer.Areas.Admin.Models;

@{
    ViewBag.Title = "WoW | Admin";
}

<div class="admin-view-container">

    <h3>Manufacturers</h3>

    <p>
        @Html.Partial("_CreateButtonPartial", "Create")
    </p>
    <table class="table table-condensed table-striped">
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BannerUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summary)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BannerUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Summary)
                </td>

                @Html.Partial("_TableButtonsPartial", new SmallButtonModel { Id = item.Id })
            </tr>
        }

    </table>
</div>